{
    "name": "spatie/unit-conversions",
    "description": "Perform unit conversions in PHP",
    "keywords": [
        "spatie",
        "unit-conversions"
    ],
    "homepage": "https://github.com/spatie/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.22",
    },
    "autoload": {
        "psr-4": {
            "Spatie\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}